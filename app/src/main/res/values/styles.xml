<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Removing Title -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorPrimary">#52b7bd</item>
        <item name="colorPrimaryDark">#52b7bd</item>
        <item name="colorAccent">#b01dab</item>
        <item name="android:textColor">#52b7bd</item>
        <item name="colorButtonNormal">#52b7bd</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#b01dab</item>
        <item name="android:background">@drawable/button_background_color_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="PurpleEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#b01dab</item>
        <item name="colorControlNormal">#b01dab</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- FIREBASE THEME -->
    <style name="FirebaseTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/lightBlue</item>
        <item name="colorAccent">@color/lightBlue</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:editTextStyle">@style/PurpleEditTextStyle</item>
        <item name="colorButtonNormal">@color/purple</item>
        <item name="colorControlActivated">@color/lightBlue</item>
        <item name="colorControlNormal">@color/lightBlue</item>
        <item name="android:windowBackground">@color/firebaseBack</item>
    </style>
</resources>
